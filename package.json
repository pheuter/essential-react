{
  "name": "essential-react",
  "version": "0.5.0",
  "description": "A minimal skeleton for building testable React apps using Babel",
  "main": "src/main.js",
  "scripts": {
    "postinstall": "npm run build",
    "server": "node start.js",
    "build": "webpack -p --progress --config webpack.production.config.js",
    "test": "nyc ava --fail-fast --verbose --require babel-register",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rm build/app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pheuter/essential-react.git"
  },
  "keywords": [
    "skeleton",
    "template",
    "react",
    "quickstart"
  ],
  "author": "Mark Fayngersh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pheuter/essential-react/issues"
  },
  "homepage": "https://github.com/pheuter/essential-react",
  "devDependencies": {
    "@types/css-modules": "^1.0.0",
    "autoprefixer": "^6.0.2",
    "ava": "^0.12.0",
    "awesome-typescript-loader": "^3.2.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "coveralls": "^2.11.2",
    "css-loader": "^0.18.0",
    "enzyme": "^2.0.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "nyc": "^5.6.0",
    "postcss-loader": "^0.6.0",
    "postcss-nested": "^1.0.0",
    "react-addons-test-utils": "^15.0.1",
    "react-hot-loader": "^1.3.0",
    "sinon": "^1.17.2",
    "style-loader": "^0.12.3",
    "typescript": "2.4.2",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "@types/react": "^16.0.1",
    "@types/react-dom": "^15.5.2",
    "@types/react-router": "3.0.12",
    "babel-core": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "express": "^4.12.3",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-router": "^2.0.0"
  }
}
